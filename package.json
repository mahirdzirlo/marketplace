{
  "name": "buyersellermarketplace",
  "version": "1.0.0",
  "description": "**Task: Develop a 2-way marketplace that allows sellers to put items and buyers to buy the items.**",
  "main": "index.js",
  "scripts": {
    "installclient": "cd client && npm install",
    "installserver": "cd server && npm install",
    "build": "concurrently \"npm run installclient\" \"npm run installserver\"",
    "client": "cd client && npm start",
    "server": "cd server && npm start",
    "start": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Mahir Dzirlo",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
